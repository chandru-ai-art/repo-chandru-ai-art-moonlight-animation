<script>
function next(n){
  const current = document.querySelector('.scene:not(.hidden)');
  current.classList.add('dissolve');
  setTimeout(()=>{
    document.querySelectorAll('.scene').forEach(s=>s.classList.add('hidden'));
    const nextScene = document.getElementById('s'+n);
    nextScene.classList.remove('hidden','dissolve');
    // retrigger materialize animation
    nextScene.querySelectorAll('.materialize').forEach(el=>{
      el.style.animation='none';
      el.offsetHeight; // force reflow
      el.style.animation='';
    });
  },1000);
}
</script>

