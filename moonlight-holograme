<style>
:root { --pulse:1.2; --time:2s; }
body { margin:0; background:#000; overflow:hidden; font-family:sans-serif; }
.scene { position:absolute; inset:0; display:flex; justify-content:center; align-items:center; transition:opacity 1s; }
.hidden { opacity:0; pointer-events:none; }
.holo { fill:rgba(0,255,255,.15); stroke:cyan; stroke-width:2; filter:drop-shadow(0 0 6px cyan); animation:flicker var(--time) infinite alternate; }
@keyframes flicker { 50%{stroke:#0ff; filter:drop-shadow(0 0 10px #0ff);} }
.pulse { animation:pulse var(--time) infinite; }
@keyframes pulse { 50%{transform:scale(var(--pulse));} }
.btn { position:absolute; bottom:15%; padding:12px 24px; background:#ff3b8d; color:#fff; border:none; border-radius:6px; font-size:18px; cursor:pointer; animation:pulse var(--time) infinite; }
.moon { position:absolute; top:10%; right:15%; width:120px; height:120px; border-radius:50%; background:radial-gradient(circle at 40% 35%,#fff 0%,#d6e6ff 40%,#aac8ff 60%,transparent 76%); box-shadow:0 0 40px #a6c7ff55; animation:moonGlow 4s ease-in-out infinite alternate; }
@keyframes moonGlow { to{box-shadow:0 0 60px #a6c7ffcc;} }
/* Scanlines overlay */
.scanlines { position:absolute; inset:0; background:repeating-linear-gradient(to bottom,rgba(0,255,255,0.08) 0px,rgba(0,255,255,0.08) 2px,transparent 2px,transparent 4px); mix-blend-mode:screen; animation:scanMove 3s linear infinite; pointer-events:none; }
@keyframes scanMove { to{background-position:0 100%;} }
/* Particle dissolve */
.dissolve { animation:dissolve 1s forwards; }
@keyframes dissolve { to{opacity:0; filter:blur(10px);} }
/* Materialize from particles */
.materialize { opacity:0; animation:materialize 1.2s forwards; }
@keyframes materialize {
  0% { opacity:0; filter:blur(12px) brightness(2); transform:scale(1.2); }
  50% { opacity:0.5; filter:blur(6px) brightness(1.5); }
  100% { opacity:1; filter:blur(0) brightness(1); transform:scale(1); }
}
